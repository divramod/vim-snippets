}
endsnippet

snippet iml "import lodash"
import { ${1} } from 'lodash'
endsnippet

snippet im "import"
import { ${1} } from './${2}'
endsnippet

snippet ex "export"
export { ${1} } from './${2}'
endsnippet

snippet d "destruct object"

snippet cll "console.log('', $)" b
console.log('$1', ${1:})
endsnippet

snippet cj "console.log('', JSON)" b
console.log('$1', JSON.stringify(${1:}, null, 4))
endsnippet

snippet v "${}" i
\${$0}
endsnippet

snippet c "${}" i
\`\${$0}\`
endsnippet

snippet todo "" i
